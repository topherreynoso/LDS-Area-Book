<% provide(:title, "Edit family") %> 
<ul class="nav nav-tabs">
  <li><%= link_to "Ward List", ward_path %></li>
  <li><%= link_to "Investigators", investigators_path %></li>
  <li><%= link_to "Watch List", watch_path %></li>
  <li><%= link_to "Find Report", reports_path %></li>
  <li><%= link_to "Create Report", newactivity_path %></li>
  <li><%= link_to "Archive", archive_path %></li>
</ul>
<h1>Update family information</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@family) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name, "Family Name (e.g. Smith, Joe & Jane)" %>
      <%= f.text_field :name %>
      <%= f.label :phone, "Phone (e.g. 123-456-7890)" %>
      <%= f.text_field :phone %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :address, "Address (street only, e.g. 1234 Street St. #23)" %>
      <%= f.text_field :address %>
      <%= f.label :children, "Names of Children (if applicable)" %>
      <%= f.text_field :children %>
      <div class="row">
        <div class="span1">
          <%= f.label :investigator, "Investigator?" %>
        </div>
        <div class="span1">
          &nbsp&nbsp<%= f.check_box :investigator %>
        </div>
      </div>
      <h4>&nbsp</h4>
      <div class="row">
        <div class="span2">
          <%= f.submit "Save changes", class: "btn btn-medium btn-primary" %>
        </div>
        <div class="span2">
          <%= link_to "View Report", reports_path(:family_id => @family.id), class: "btn btn-medium btn-secondary" %>
        </div>
        <div class="span2">
          <%= link_to "Archive Family", archive_path(:archive_family => @family.id, :family_id => @family.id), class: "btn btn-medium btn-danger", data: { confirm: "Are you sure you want to archive this family and all activity records associated with this family?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
