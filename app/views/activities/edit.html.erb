<% provide(:title, "Edit Activity") %> 
<div class="row">
  <div class="offset1 span9">
    <ul class="nav nav-tabs">
      <li><%= link_to "Ward List", ward_path %></li>
      <li><%= link_to "Investigators", investigators_path %></li>
      <li><%= link_to "Watch List", watch_path %></li>
      <li><%= link_to "Find Report", reports_path %></li>
      <li><%= link_to "Report Activity", newactivity_path %></li>
      <li><%= link_to "Archive", archive_path %></li>
    </ul>
  </div>
</div>
<div class="container">
  <fullbody class="span11">
    <div class="offset3 span5">
      <center><h4>Edit Activity</h4></center>
      <%= form_for(@activity) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :family_id, "Family contacted/visited" %>
        <%= f.collection_select(:family_id, Family.where("archived = ?", false), :id, :name) %>
        <%= f.label :activity_date, "Date contacted/visited" %>
        <div class="row">
          <div class="span2 input-append date datepicker" data-date="<%= @activity.activity_date.strftime('%m/%d/%y') %>" >
            <%= f.text_field :activity_date, :value => @activity.activity_date.strftime('%m/%d/%y'), :readonly => true %>
            <span class="add-on"><i class="icon-th"></i></span>
          </div>
        </div>
        <%= f.label :reported_by, "Person(s) who contacted/visited the family above" %>
        <%= f.text_field :reported_by %>
        <%= f.label :notes, "Notes" %>
        <%= f.text_area :notes, :rows => "3", :placeholder => "max 250" %>
        <div class="row">
          <div class="span3">
            <%= f.label :visit, "Check if someone actually visited and met with this family." %>
          </div>
          <div class="span1">
            &nbsp&nbsp<%= f.check_box :visit %>
          </div>
        </div>
        <h7>&nbsp</h7>
        <div class="row">
          <div class="span2">
            <%= f.submit "Update Record", class: "btn btn-medium btn-primary" %>
          </div>
          <div class="span2">
            <%= link_to "Delete Activity", @activity, method: :delete, class: "btn btn-medium btn-danger",
                        confirm: "Are you sure you want to permanently delete this activity record?", "data-confirm-fade" => true, 
                        "data-confirm-title" => "Delete Activity Record", "data-confirm-proceed" => "Delete", 
                        "data-confirm-proceed-class" => "btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>    
  </fullbody>
</div>
<script type="text/javascript">
  $('.datepicker').datepicker({
    format: 'mm/dd/yy',
    autoclose: true
  });
</script>
