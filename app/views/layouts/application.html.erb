<!DOCTYPE html>
<html>
  <head>
    <!-- show the page title -->
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>    
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <!-- flash any notices passed from controllers -->
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>" style="margin:0 0 40px 0;"><%= value %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>