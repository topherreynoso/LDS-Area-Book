<% provide(:title, 'Ward List') %>
<div class="row">
  <div class="offset1 span9">
	  <ul class="nav nav-tabs">
  	  <li class="active"><%= link_to "Ward List", wardlist_path %></li>
  	  <li><%= link_to "Investigators", investigators_path %></li>
      <li><%= link_to "Watch List", watch_path %></li>
      <li><%= link_to "Find Report", reports_path %></li>
  	  <li><%= link_to "Report Activity", newactivity_path %></li>
  	  <li><%= link_to "Archive", archive_path %></li>
	  </ul>
  </div>
</div>
<div class="container">
  <fullbody class="span11">
    <%= render 'families_list' %>
    <div class="span1">
      <%= link_to "<i class='icon-white icon-plus'></i>".html_safe, newfamily_path, class: "btn btn-medium btn-primary" %>
    </div>
    <div class="span1">
      <% if current_user.admin? %>
        <%= link_to "<i class='icon-white icon-refresh'></i>".html_safe, import_path, class: "btn btn-medium btn-success" %>
      <% else %>
        &nbsp
      <% end %>
    </div>
    <div class="span8 pull-right">
      <%= will_paginate @families, :inner_window => 2, :outer_window => 1, style: "margin: 0 0 0 0;" %>
    </div>
  </fullbody>
</div>